<?xml version="1.0" encoding="UTF-8"?>
<CustomObject xmlns="http://soap.sforce.com/2006/04/metadata">
    <label>Azure DevOps Connection</label>
    <pluralLabel>Azure DevOps Connections</pluralLabel>
    <visibility>Public</visibility>
    <fields>
        <fullName>Organization__c</fullName>
        <label>Organization</label>
        <description>Azure DevOps organization name</description>
        <type>Text</type>
        <length>255</length>
        <required>true</required>
    </fields>
    <fields>
        <fullName>Project__c</fullName>
        <label>Project</label>
        <description>Azure DevOps project name</description>
        <type>Text</type>
        <length>255</length>
        <required>true</required>
    </fields>
    <fields>
        <fullName>BaseUrl__c</fullName>
        <label>Base URL</label>
        <description>Azure DevOps API base URL (default: https://dev.azure.com)</description>
        <type>Url</type>
        <required>false</required>
    </fields>
    <fields>
        <fullName>NamedCredential__c</fullName>
        <label>Named Credential</label>
        <description>Named Credential for authentication (recommended for production)</description>
        <type>Text</type>
        <length>255</length>
        <required>false</required>
    </fields>
    <fields>
        <fullName>ApiVersion__c</fullName>
        <label>API Version</label>
        <description>Azure DevOps API version (default: 6.0)</description>
        <type>Text</type>
        <length>10</length>
        <required>false</required>
    </fields>
    <fields>
        <fullName>AccessToken__c</fullName>
        <label>Access Token</label>
        <description>Personal Access Token (PAT) for authentication. Use Named Credential instead for production.</description>
        <type>Text</type>
        <length>255</length>
        <required>false</required>
    </fields>
    <fields>
        <fullName>IsActive__c</fullName>
        <label>Is Active</label>
        <description>Indicates if this connection is active</description>
        <type>Checkbox</type>
        <defaultValue>true</defaultValue>
    </fields>
</CustomObject>
