        <length>100</length>
        <required>false</required>
    </fields>
    <fields>
        <fullName>Sort_Order__c</fullName>
        <label>Sort Order</label>
        <description>Display order for priorities</description>
        <type>Number</type>
        <precision>3</precision>
        <scale>0</scale>
        <required>false</required>
    </fields>
