{
  "trailingComma": "none",
  "tabWidth": 4,
  "semi": true,
  "singleQuote": true,
  "printWidth": 120,
  "bracketSpacing": true,
  "arrowParens": "avoid",
  "overrides": [
    {
      "files": "*.{cls,trigger}",
      "options": {
        "parser": "apex",
        "tabWidth": 4
      }
    },
    {
      "files": "*.{xml,cmp,page,component}",
      "options": {
        "parser": "xml",
        "tabWidth": 4
      }
    }
  ]
}